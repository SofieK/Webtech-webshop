extends layout
extends nav

block content
	div#container
		div#containerinside
			h1.pagehead Cart
			if !user
				a(class="cart" href="/login") Login to see your cart

			else 
				if user.cart == ""
					p Your cart is empty
					a(class="cart" href="/") Go shopping!

				else
					table.table
						tr
							th Product
							th Productprice 
							th Amount
							th Price
						- var p = cart
						- var a = amount
						- var s = size
						- var total = 0
						- for (var i = 0; i< p.length; i++)
							- var tot = p[i].Price * a[i]
							- total = total +tot
							tr(class="cartproduct")
								td
									img(class="avatar" src="/uploads/"+p[i].Picture)
									p.bigger= p[i].Name
									p="Size: "+ s[i]
								td="€ "+ p[i].Price
								td= a[i]
								td.bigger="€ "+  tot
					div#continue
						h3.total=" TOTAL = € "+ total

						form(action="/order", method="post")
							input(type="hidden" name="total" id="total" value=total)
							button(type="submit" id="OrderCart") Place order!

					div#clearfix

					script.
						$(document).ready(function(){

							var socket = io.connect('http://localhost:3000');

								$('#OrderCart').on('click', function(){
									var userId = "#{user._id}";
									var cart = !{JSON.stringify(user.cart)}
									console.log(cart);
									var totalPrice = $('#total').val();
									var new_order = {'user': userId, 'order': cart, 'total': totalPrice};

								
									socket.emit('NewOrder', new_order);
								});



						});